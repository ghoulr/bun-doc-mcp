{
  "name": "bun-doc-mcp",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/bun": "latest",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.39.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2"
  },
  "scripts": {
    "build": "bun build index.ts --production --target=bun --outdir=dist",
    "build:dev": "bun build index.ts --sourcemap=inline --target=bun --outdir=dist",
    "lint": "eslint *.ts",
    "lint:fix": "eslint *.ts --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
