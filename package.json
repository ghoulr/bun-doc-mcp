{
  "name": "bun-doc-mcp",
  "version": "2.1.0",
  "description": "MCP server for Bun documentation",
  "module": "index.ts",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "bun-doc-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "mcp",
    "bun",
    "documentation",
    "model-context-protocol"
  ],
  "author": "Zhou Rui",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghoulr/bun-doc-mcp.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/bun": "latest",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsc-files": "^1.1.4",
    "typescript-eslint": "^8.39.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2"
  },
  "scripts": {
    "build": "bun build index.ts --production --target=bun --outfile=dist/index.js",
    "build:dev": "bun build index.ts --sourcemap=inline --target=bun --outfile=dist/index.js",
    "prepublishOnly": "bun run build",
    "lint": "eslint *.ts",
    "lint:fix": "eslint *.ts --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "tsc-files --noEmit",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
